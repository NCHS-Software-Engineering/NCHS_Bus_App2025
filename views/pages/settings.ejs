<!DOCTYPE html>
<html>
    <head>
        <title>NCHS Bus Changes - Admin</title>

        <link rel="icon" type="image/png" href="/images/Naperville_Central_Logo.png">

        <!-- Latest compiled and minified CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

        <link rel="stylesheet" href="/css/maincontent.css">
        <link rel="stylesheet" href="/css/navbar.css">

    </head>

    <body>
        <div id = "navbar">
            <button onclick = "window.location.href = '/buslist'"><image src = "/images/buslist.png"></image></button> <!--Redirects to Bus List-->
            <button onclick = "window.location.href = '/buschanges'"><image src = "/images/buschange.png"></image></button> <!--Redirects to Bus Changes-->
            <button onclick = "window.location.href = '/settings'" id = "active"><image src = "/images/settings.png"></image></button> <!--Redirects to Settings-->
            <button onclick = "window.location.replace('https://nchsbusapp.org')"><image src = "/images/exit.png"></image></button> <!--Exits Admin Panel-->
        </div>
        <div id="maincontent">
            <div id="inputs">
                <form class = "form" action="/addbus" method="post">
                    <input type="text" name="busnum" placeholder="Add Bus">
                    <input type="submit" value="Submit">
                </form>
                <form class="form" id="deletebuses" action="/delbus" method="post">
                    <select name="busnum" id="busDropdown">
                        <option value="" disabled selected>Select Bus to Delete</option>
                    </select>
                    <input type="submit" onclick = "confirm('Bruh you sure you wanna do dis?')" value="Submit">
                </form>
                <form class = "form" action="/addemail" method="post">
                    <input type="text" name="email" placeholder="Add Email">
                    <input type="submit" value="Submit">
                </form>
                <form class = "form" id = "deletemails" action="/delemail" method="post">
                    <select name="email" id="emailDropdown">
                        <option value="" disabled selected>Select Email to Delete</option>
                    </select>
                    <input type="submit" value="Submit">
                </form>
                <button id="resetbtn" onclick="reset()">Reset All Busses to Default</button>

                <div id="switch">
                    <label class="switch">
                        <input type="checkbox">
                        <span class="slider"></span>
                      </label>
                </div>
            </div>
           
            <div class = "information" id="bus-whitelist">
                <h1>Active Buses</h1>
            </div>
            <div class = "information" id="emails">
                <h1>Allowed Users</h1>
                <div id="scrollable-div"></div>
            </div>
            
       </div>
    </body>

    <script src="/js/settings.js"></script>
</html>